<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ToDo list</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <div class="box" id="heading">

        <h1>
            <%= tDay %>
        </h1>
    </div>
    <div class="box">


        <% newTask.forEach(function(item){ %>
            <form action="/delete" method="post">

                <div class="item">
                    <input onChange="this.form.submit()" type="checkbox" name="checkbox" value="<%=item._id%>">
                    <p>
                        <%= item.name %>
                    </p>

                </div>
                <input type="hidden" name="listName" value="<%= tDay %>">
            </form>

            <% }) %>

                <form action="/" method="post" class="item">
                    <input type="text" name="newValue" placeholder="new item" autocomplete="off">
                    <button type="submit" name="list" value="<%= tDay %>"> + </button>
                </form>
    </div>

</body>

</html>